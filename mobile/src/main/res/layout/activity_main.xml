<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    style="@android:style/Animation"
    android:background="@android:color/background_dark"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:text="Movie Name"
        style="@android:style/Animation"
        android:background="@android:color/black"
        android:clickable="true"
        android:editable="true"
        android:elegantTextHeight="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:longClickable="true"
        android:linksClickable="true"
        android:textColor="#ff07ff81"
        android:textColorHighlight="#ff07ff8b"
        android:typeface="normal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText2"
        android:text="Release year"
        style="@android:style/Animation"
        android:background="@android:color/black"
        android:clickable="true"
        android:editable="true"
        android:elegantTextHeight="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:linksClickable="true"
        android:longClickable="true"
        android:textColor="#ff08ff98"
        android:textColorHighlight="#ff07ffa4"
        android:textIsSelectable="true"
        android:singleLine="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:id="@+id/button"
        android:onClick="search"
        style="@style/Base.TextAppearance.AppCompat.Button"
        />
    <RelativeLayout
        style="@style/GenericProgressBackground"
        android:id="@+id/loadingPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <ProgressBar
            style="@style/GenericProgressIndicator"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="396dp"
        android:layout_height="155dp"
        android:id="@+id/imageView"
        android:src="@drawable/spectre"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.41"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Movie Information"
        android:id="@+id/textView"
        android:layout_weight="0.36"
        style="@style/Base.TextAppearance.AppCompat"
        android:background="@android:color/background_dark"
        android:clickable="true"
        android:editable="true"
        android:elegantTextHeight="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:longClickable="true"
        android:linksClickable="true"
        android:textAlignment="center"
        android:textColor="#ff0bff89"
        android:textColorHighlight="#ff08ff79"
        android:textIsSelectable="true"
        android:typeface="sans" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD REMINDER"
        android:id="@+id/button2"
        android:onClick="addEvent"
        android:visibility="invisible"/>
</LinearLayout>
